  <script>
    var str = "<%= post.created %>";
    document.getElementById("demo").innerHTML = str.slice(8, -27);

    $("#date").html($("#hidden").val().slice(8, -27));

    function giveComment(post, author) {
      const data = { post: post, author: author, comment: $("#comment").val() };
      $.ajax({
        url: "/users/givecomment",
        type: "POST",
        data: data,
      }).done((result) => {
        console.log(result);
        if (result.status == "error") {
          alert("Something went wrong");
          $("#comment").val("");
          $("#comment").focus();
        } else {
          $("#comment").val("");
          $("#comment").focus();
          location.reload();
        }
      });
    }

    function giveReply(commentId) {
      const data = { comment: commentId, reply: $("#replyInput").val() };
      $.ajax({
        url: "/users/giveReply",
        type: "POST",
        data: data,
      }).done((result) => {
        console.log(result);
        if (result.status == "error") {
          alert("Something went wrong");
          $("#comment").val("");
          $("#comment").focus();
        } else {
          $("#comment").val("");
          location.reload();
        }
      });
    }

    $("#replybox").hide();
    var num = -1;
    function showReply() {
      num += 1;
      if (num % 2 == 0) {
        $("#replybox").show();
      } else {
        $("#replybox").hide();
      }
    }
  </script>
